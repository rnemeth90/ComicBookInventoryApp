        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weapon)
        </dd>
    </dl>

    <form asp-action="DeleteCharacter">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="GetAllCharacters">Back to List</a>
    </form>
</div>
