@using ComicBookInventory.Shared;
@model CharacterViewModel
@{
}

<h3>@Model.FullName</h3>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FullName)
    </dt>
    <dd class="col-sm-10">
        <a href='@string.Format("https://en.wikipedia.org/wiki/{0}",@Model.FullName)'>@Html.DisplayFor(model => model.FullName)</a>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Alias)
    </dt>
    <dd class="col-sm-10">
        <a href='@string.Format("https://en.wikipedia.org/wiki/{0}",@Model.Alias)'>@Html.DisplayFor(model => model.Alias)</a>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsAlive)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.IsAlive)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Species)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Species)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Weapon)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Weapon)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PrimaryAbility)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PrimaryAbility)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.SecondaryAbility)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.SecondaryAbility)
    </dd>
</dl>

